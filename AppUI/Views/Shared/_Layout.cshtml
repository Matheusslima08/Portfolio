@{
    string skin = $"{_appSettings.Skin}.css";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Portfólio de Matheus Vinicius, desenvolvedor web Full Stack" />
    <meta name="author" content="Matheus Vinicius" />
    <meta property="og:description" content="Portfólio de Matheus Vinicius, desenvolvedor web Full Stack" />
    <meta property="og:image" content="/assets/images/profile.png" />
    <meta property="og:type" content="website" />
    <meta name="keywords" content="developer, programação, desenvolvedor, programador, html, css, javascript, c#, .net, Sql, Mysql, github, fullstack" />
    <meta name="robots" content="index, follow" />

    <title>@ViewData["Title"] - @_appSettings.AppName</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap" />
    <link rel="icon" type="image/png" href="/assets/icons/favicon.png" class="nav-links" />
</head>

<head>
    <link rel="stylesheet" asp-append-version="true"
          href="~/css/@((string)ViewData["Theme"]).css">
</head>

<body>

    <main role="main">
        @RenderBody()
    </main>
    <form method="post" asp-controller="Theme" asp-action="ChangeTheme">
        <select name="selectedTheme" onchange="this.form.submit()">
            <option value="light" selected>Light</option>
            <option value="dark">Dark</option>
        </select>
    </form>
    

    <script src="~/js/site.js"></script>
</body>
</html>
